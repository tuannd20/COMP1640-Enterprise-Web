<div class="overflow-x-auto m-1">
  <div
    class="flex justify-center min-h-screen overflow-hidden font-sans bg-gray-100 min-w-screen"
  >
    <div class="w-full select-none lg:w-4/6">
      <div class="relative mt-20 mb-10 create-btn flex justify-end">
        <a href="/qam/department/create">
            <button type="button" class="inline-block px-6 py-4 bg-sky-900 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-sky-400 hover:shadow-lg focus:bg-blue-400 focus:shadow-lg focus:outline-none focus:ring-0 active: active:shadow-lg transition duration-150 ease-in-out">New Department</button>
        </a>
      </div>
      <div class="my-6 bg-white rounded shadow-md">
        <table class="w-full table-auto min-w-max">
          <thead>
            <tr
              class="text-sm leading-normal text-gray-600 uppercase bg-gray-200"
            >
              <th class="px-6 py-3 text-center">No</th>
              <th class="px-6 py-3 text-left">Name Department</th>
              <th class="px-6 py-3 text-left">Description</th>
              <th class="px-6 py-3 text-center">Active</th>
              <th class="px-6 py-3 text-center">Action</th>
            </tr>
          </thead>
          <tbody class="text-sm font-light text-gray-600">
            <% Department.forEach(function(department, index) { %>
            <tr class="border-b border-gray-200 hover:bg-gray-100">
              <td class="px-6 py-3 text-center">
                <span class="font-medium"><%= index + 1 %></span>
              </td>
              <td class="px-6 py-3 text-left">
                <span class="font-medium"><%= department.nameDepartment%></span>
              </td>
              <td class="px-6 py-3 text-justify leading-6 overflow-hidden indent-0.5 max-h-52"
              style="
                max-width: 300px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;"
              >
                <span><%= department.description%></span>
              </td>
              <% if (department.isUsed === true) { %>
              <td class="px-6 py-3 text-center">
                <span
                  class="px-5 py-1 text-xs text-white bg-green-600 rounded-full"
                  >Used</span
                >
              </td>
              <%}else { %>
              <td class="px-6 py-3 text-center">
                <span
                  class="px-3 py-1 text-xs text-white bg-red-600 rounded-full"
                  >Unused</span
                >
              </td>
              <% } %>
              <td class="px-6 py-3 text-center">
                <div class="flex justify-center item-center">
                  <!-- <div
                    class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                      />
                    </svg>
                  </div> -->
                  <div
                    class="w-6 mr-2 transform hover:text-sky-900 hover:scale-110"
                  >
                    <a href="/qam/department/edit/<%= department.id %>">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                        />
                      </svg>
                    </a>
                  </div>
                  <% if (department.isUsed === true) { %>
                  <div class="w-6 mr-2 transform opacity-50">
                    <a>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                        />
                      </svg>
                    </a>
                  </div>
                  <%}else { %>
                  <div
                    class="w-6 mr-2 transform hover:text-sky-900 hover:scale-110"
                  >
                    <a href="/qam/department/delete/<%= department.id %>">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                        />
                      </svg>
                    </a>
                  </div>
                  <% } %>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
