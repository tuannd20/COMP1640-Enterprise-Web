<Main class="pt-[100px] w-3/5 m-auto h-full">
  <div
    class="relative p-3 border-2 idea border-stone-700 rounded-2xl h-[70%] min-h-[70%] opacity-80"
  >
    <div class="flex p-3 mb-5 text-2xl font-semibold border-b-2 title-create">
      <a href="/qam/department">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="font-extrabold w-7 h-7 text-sky-900 hover:text-sky-400"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3"
          />
        </svg>
      </a>

      <div class="m-auto">Edit department</div>
    </div>
    <div class="content-idea">
      <div class="flex items-center justify-center select-none">
        <div class="mx-auto w-full max-w-[550px]">
          <form
            action="/qam/department/edit/<%= department.id %>"
            method="POST"
          >
            <div class="mt-14">
              <label
                for="nameDepartment"
                class="mb-3 block text-base font-medium text-[#07074D]"
              >
                Name
              </label>
              <input
                type="text"
                name="nameDepartment"
                id="nameDepartment"
                value="<%= department.nameDepartment %>"
                required
                class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
              />

              <label
                for="description"
                class="mb-3 block text-base font-medium text-[#07074D]"
              >
                Description
              </label>
              <input
                type="text"
                name="description"
                id="description"
                value="<%= department.description %>"
                required
                class="w-full mb-3 rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
              />

              <label
                for="myCheck"
                class="text-base font-medium text-[#07074D] pr-3"
              >
                Active</label
              ><input
                type="hidden"
                name="isUsed"
                id="isUsedInput"
                value="<%= department.isUsed %>"
              />
              <% if (department.isUsed === false) { %>
              <input type="checkbox" id="myCheck" class="border rounded-full" />
              <% } else { %>
              <input
                type="checkbox"
                id="myCheck"
                class="border rounded-full"
                checked
              />
              <% } %>
            </div>

            <div
              class="absolute w-[90px] px-3 py-2 text-center text-white border-2 rounded-lg bottom-5 right-5 submit-btn bg-sky-900 hover:bg-sky-400"
            >
              <input type="submit" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    const checkbox = document.getElementById("myCheck");
    const isUsedInput = document.getElementById("isUsedInput");

    checkbox.addEventListener("change", () => {
      isUsedInput.value = checkbox.checked ? "true" : "false";
    });
  </script>
</Main>
