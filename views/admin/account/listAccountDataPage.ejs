<script>
  let idAccountStaff = document.getElementsByClassName("getIdAccountStaff");
  let idUnbanAccountStaff = document.getElementsByClassName(
    "getIdUnbanAccountStaff",
  );
  let banAccountStaffBtn = document.getElementsByClassName("banAccountStaff");
  let btnBanAccountStaff = document.getElementById("btn-ban-account-staff");
  let banAccountStaffForm = document.forms["ban-account-staff-form"];
  let unBanAccountStaffBtn =
    document.getElementsByClassName("unBanAccountStaff");
  let btnUnBanAccountStaff = document.getElementById("btn-unban-account-staff");
  let unBanAccountStaffForm = document.forms["unban-account-staff-form"];

  for (let i = 0; i < banAccountStaffBtn.length; i++) {
    banAccountStaffBtn[i].addEventListener("click", () => {
      console.log(
        "🚀 ~ file: listAccountDataPage.ejs:354 ~ banAccountStaffBtn[i].addEventListener ~ banAccountStaffBtn[i]:",
        banAccountStaffBtn[i],
      );
      const id = idAccountStaff[i].value;
      console.log(
        "🚀 ~ file: listAccountDataPage.ejs:355 ~ banAccountStaffBtn[i].addEventListener ~ id:",
        id,
      );

      btnBanAccountStaff.onclick = function () {
        banAccountStaffForm.action =
          "/admin/account/ban/" + id + "?_method=PUT";
        banAccountStaffForm.submit();
      };
    });
  }
  for (let j = 0; j < unBanAccountStaffBtn.length; j++) {
    unBanAccountStaffBtn[j].addEventListener("click", () => {
      const id = idUnbanAccountStaff[j].value;
      console.log(
        "🚀 ~ file: listAccountDataPage.ejs:367 ~ unBanAccountStaffBtn[j].addEventListener ~ id:",
        id,
      );

      btnUnBanAccountStaff.onclick = function () {
        console.log(
          "🚀 ~ file: listAccountDataPage.ejs:371 ~ unBanAccountStaffBtn[j].addEventListener ~  btnUnBanAccountStaff:",
          btnUnBanAccountStaff,
        );
        unBanAccountStaffForm.action =
          "/admin/account/unban/" + id + "?_method=PUT";
        unBanAccountStaffForm.submit();
      };
    });
  }
</script>

<script>
  const dropMenu = document.getElementById("menu_icon");
  const drop = document.getElementById("dropdown");
  function dropdown() {
    drop.classList.toggle("hidden");
  }

  function dropdownDismiss() {
    drop.classList.add("hidden");
  }

  dropMenu.addEventListener("click", () => {
    dropdown();
  });

  drop.addEventListener("mouseleave", () => {
    dropdownDismiss();
  });
</script>
