<script>
  let idIdea = document.getElementsByClassName("getIdIdea");
  let trashIdeaBtn = document.getElementsByClassName("trashIdea");

  let btnDeleteIdea = document.getElementById("btn-delete-idea");
  let deleteForm = document.forms["delete-idea-form"];

  for (let i = 0; i < trashIdeaBtn.length; i++) {
    trashIdeaBtn[i].addEventListener("click", () => {
      const id = idIdea[i].value;

      btnDeleteIdea.onclick = function () {
        deleteForm.action = "/ideas/" + id + "?_method=DELETE";
        deleteForm.submit();
      };
    });
  }

  const input = document.getElementById("avatarUpload");
  const avatarPreview = document.getElementById("avatar-preview");

  const togglePassword = document.getElementById("togglePassword");
  const password = document.getElementById("password");

  const toggleOldPassword = document.getElementById("toggleOldPassword");
  const oldPassword = document.getElementById("oldPassword");

  togglePassword.addEventListener("click", () => {
    const type =
      password.getAttribute("type") === "password" ? "text" : "password";
    password.setAttribute("type", type);
    this.classList.toggle("fa-eye-slash");
  });

  toggleOldPassword.addEventListener("click", () => {
    const type =
      oldPassword.getAttribute("type") === "password" ? "text" : "password";
    oldPassword.setAttribute("type", type);
    this.classList.toggle("fa-eye-slash");
  });

  const btmSubmitUpdatePassword = document.getElementById(
    "handleUpdatePassword",
  );
  btmSubmitUpdatePassword.addEventListener("click", changePassword);

  function changePassword(event) {
    event.preventDefault();

    const oldPasswordElement = document.getElementById("oldPassword").value;
    const newPasswordElement = document.getElementById("newPassword").value;
    const confirmPasswordElement =
      document.getElementById("confirmPassword").value;

    let data = {
      oldPassword: oldPasswordElement,
      newPassword: newPasswordElement,
      confirmPassword: confirmPasswordElement,
    };

    fetch("/auth/changePassword", {
      method: "PATCH",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(data),
    })
      .then((response) => response.json())
      .then((data) => {
        console.log("Response from server:", data);
        if (data.success === false) {
          const errorMessageElement = document.getElementById("errorMessage");
          errorMessageElement.style.display = "block";
          errorMessageElement.textContent = data.message;
        }
      })
      .catch((error) => {
        console.error("Error occurred:", error);
      });
  }
</script>
