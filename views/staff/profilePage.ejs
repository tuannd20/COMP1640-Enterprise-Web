<Main class="mt-[60px] flex flex-row min-h-screen">
  <div class="flex flex-col items-center w-1/3 mt-20 profile">
    <div>
      <div class="items-center">
        <% if(staffProfile.avatarImage === null) { %>
        <img
          src="<%= process.env.BASE_URL %>image/avatar.png"
          alt=""
          class="object-cover ml-8 border-2 rounded-full cursor-pointer border-lime-700 max-lg:w-48 max-lg:h-48 w-60 h-60"
        />
        <%}else { %>
        <img
          src="<%= process.env.BASE_URL %><%= staffProfile.avatarImage %>"
          alt=""
          class="object-cover ml-8 border-2 rounded-full cursor-pointer border-lime-700 max-lg:w-48 max-lg:h-48 w-60 h-60"
        />
        <% } %>
      </div>
      <div class="mt-2 leading-loose information text-zinc-800">
        <p>Fullname: <%= staffProfile.fullName %></p>
        <p>Role: <%= staffProfile.idRole.nameRole %></p>
        <% if (data.staffPayload.idDepartment === null) { %>
        <p>Department: You do not have a Department</p>
        <%}else { %>
        <p>Department: <%= staffProfile.idDepartment.nameDepartment %></p>
        <% } %>
        <p>Email: <%= staffProfile.email %></p>
        <p>Phone number: <%= staffProfile.phoneNumber %></p>
        <p>Address: <%= staffProfile.address %></p>
      </div>
      <a href="/profile/edit/<%= staff._id %>">
        <div
          class="px-3 py-2 mt-2 text-center text-white ease-linear translate-x-0 border-2 rounded-lg select-none w-80 submit-btn bg-sky-900 hover:bg-green-500"
        >
          Edit profile
        </div>
      </a>
      <div
        class="px-3 py-2 mt-2 text-center text-white ease-linear translate-x-0 border-2 rounded-lg select-none w-80 submit-btn bg-sky-900 hover:bg-green-500"
      >
        <!-- Modal toggle -->
        <button
          data-modal-target="authentication-modal"
          data-modal-toggle="authentication-modal"
          type="button"
        >
          Change password
        </button>
      </div>
    </div>
  </div>

  <div class="w-2/3">
    <div class="relative create-btn">
      <a href="/ideas">
        <button
          class="relative left-[69%] 2xl:left-[73%] inline-flex items-center justify-center p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-green-500 to-sky-900 group-hover:from-green-400 group-hover:to-sky-900 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800"
        >
          <span
            class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0"
          >
            New idea
          </span>
        </button>
      </a>
    </div>

    <% if (!isHaveIdeas) { %>

    <div
      class="flex items-center justify-center w-2/3 m-auto mt-4 select-none gap-9"
    >
      <img
        src="<%= process.env.BASE_URL %>image/noIdea.png"
        alt="idea"
        class="w-1/2"
      />
    </div>
    <%}else { %>
    <div>
      <div
        class="flex flex-col w-2/3 min-h-screen m-auto mt-4 select-none gap-9"
      >
        <% data.allIdea.docs.forEach(function(idea) { %>
        <div
          class="relative p-3 border-2 idea border-stone-700 rounded-2xl h-96 opacity-80"
        >
          <div class="flex flex-row justify-between header-idea">
            <div
              class="flex flex-row items-center justify-center gap-2 mb-2 ml-3"
            >
              <% if(idea.idStaffIdea.avatarImage === null) { %>
              <img
                src="<%= process.env.BASE_URL %>image/avatar.png"
                alt=""
                class="border rounded-full w-14 h-14"
              />
              <%}else { %>
              <img
                src="<%= process.env.BASE_URL %><%= idea.idStaffIdea.avatarImage %>"
                alt=""
                class="border rounded-full w-14 h-14"
              />
              <% } %>

              <p class="text-base font-medium">
                <%= idea.idStaffIdea.fullName %>
              </p>
            </div>
            <div class="flex flex-row items-center justify-center gap-3">
              <a href="/ideas/<%= idea._id %>">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-10 h-10 max-lg:w-7 max-lg:h-7 text-sky-600 hover:text-sky-900"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
                  />
                </svg>
              </a>

              <button
                data-modal-target="popup-modal"
                data-modal-toggle="popup-modal"
                data-idea-id="<%= idea._id %>"
                type="button"
                class="w-6 mr-2 transform trashIdea hover:text-sky-900 hover:scale-110"
              >
                <input
                  type="text"
                  class="hidden getIdIdea"
                  value="<%= idea._id %>"
                />
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-10 h-10 max-lg:w-7 max-lg:h-7 text-sky-600 hover:text-sky-900"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                  />
                </svg>
              </button>
            </div>
          </div>

          <div class="content-idea">
            <div
              class="w-full px-5 pt-2 mt-1 border border-gray-300 rounded-md shadow-sm text-clip h-60 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
            >
              <p
                class="leading-6 overflow-hidden indent-0.5 text-justify max-h-52"
                style="
                  -webkit-line-clamp: 7;
                  -webkit-box-orient: vertical;
                  overflow: hidden;
                  display: -webkit-box;
                "
              >
                <%= idea.contentIdea %>
              </p>
              <input
                type="text"
                name="id"
                class="hidden id-idea"
                value="<%= idea._id %>"
              />
            </div>
          </div>

          <div class="absolute bottom-3 w-[95%] m-auto">
            <div class="flex flex-row justify-between footer-idea">
              <div class="file-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-10 h-10 max-lg:w-7 max-lg:h-7 text-sky-600 hover:text-sky-900"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z"
                  />
                </svg>
              </div>

              <div
                class="flex flex-row items-center justify-center gap-5 like-dislike-view-icon"
              >
                <div
                  class="flex flex-row items-center justify-center gap-1 like"
                >
                  <% if(idea.isLike === true) { %>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="w-10 h-10 cursor-pointer like-icon text-sky-500"
                  >
                    <path
                      d="M7.493 18.75c-.425 0-.82-.236-.975-.632A7.48 7.48 0 016 15.375c0-1.75.599-3.358 1.602-4.634.151-.192.373-.309.6-.397.473-.183.89-.514 1.212-.924a9.042 9.042 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75 2.25 2.25 0 012.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H14.23c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23h-.777zM2.331 10.977a11.969 11.969 0 00-.831 4.398 12 12 0 00.52 3.507c.26.85 1.084 1.368 1.973 1.368H4.9c.445 0 .72-.498.523-.898a8.963 8.963 0 01-.924-3.977c0-1.708.476-3.305 1.302-4.666.245-.403-.028-.959-.5-.959H4.25c-.832 0-1.612.453-1.918 1.227z"
                    />
                  </svg>
                  <%}else { %>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="w-10 h-10 cursor-pointer like-icon text-slate-700"
                  >
                    <path
                      d="M7.493 18.75c-.425 0-.82-.236-.975-.632A7.48 7.48 0 016 15.375c0-1.75.599-3.358 1.602-4.634.151-.192.373-.309.6-.397.473-.183.89-.514 1.212-.924a9.042 9.042 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75 2.25 2.25 0 012.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H14.23c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23h-.777zM2.331 10.977a11.969 11.969 0 00-.831 4.398 12 12 0 00.52 3.507c.26.85 1.084 1.368 1.973 1.368H4.9c.445 0 .72-.498.523-.898a8.963 8.963 0 01-.924-3.977c0-1.708.476-3.305 1.302-4.666.245-.403-.028-.959-.5-.959H4.25c-.832 0-1.612.453-1.918 1.227z"
                    />
                  </svg>
                  <% } %>
                  <p class="text-base font-medium like-moule">
                    <%= idea.likeCount %>
                  </p>
                </div>

                <div
                  class="flex flex-row items-center justify-center gap-1 dislike"
                >
                  <% if(idea.isLike === false) { %>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="w-10 h-10 cursor-pointer dislike-icon text-sky-500"
                  >
                    <path
                      d="M15.73 5.25h1.035A7.465 7.465 0 0118 9.375a7.465 7.465 0 01-1.235 4.125h-.148c-.806 0-1.534.446-2.031 1.08a9.04 9.04 0 01-2.861 2.4c-.723.384-1.35.956-1.653 1.715a4.498 4.498 0 00-.322 1.672V21a.75.75 0 01-.75.75 2.25 2.25 0 01-2.25-2.25c0-1.152.26-2.243.723-3.218C7.74 15.724 7.366 15 6.748 15H3.622c-1.026 0-1.945-.694-2.054-1.715A12.134 12.134 0 011.5 12c0-2.848.992-5.464 2.649-7.521.388-.482.987-.729 1.605-.729H9.77a4.5 4.5 0 011.423.23l3.114 1.04a4.5 4.5 0 001.423.23zM21.669 13.773c.536-1.362.831-2.845.831-4.398 0-1.22-.182-2.398-.52-3.507-.26-.85-1.084-1.368-1.973-1.368H19.1c-.445 0-.72.498-.523.898.591 1.2.924 2.55.924 3.977a8.959 8.959 0 01-1.302 4.666c-.245.403.028.959.5.959h1.053c.832 0 1.612-.453 1.918-1.227z"
                    />
                  </svg>
                  <%}else { %>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="w-10 h-10 cursor-pointer dislike-icon text-slate-700"
                  >
                    <path
                      d="M15.73 5.25h1.035A7.465 7.465 0 0118 9.375a7.465 7.465 0 01-1.235 4.125h-.148c-.806 0-1.534.446-2.031 1.08a9.04 9.04 0 01-2.861 2.4c-.723.384-1.35.956-1.653 1.715a4.498 4.498 0 00-.322 1.672V21a.75.75 0 01-.75.75 2.25 2.25 0 01-2.25-2.25c0-1.152.26-2.243.723-3.218C7.74 15.724 7.366 15 6.748 15H3.622c-1.026 0-1.945-.694-2.054-1.715A12.134 12.134 0 011.5 12c0-2.848.992-5.464 2.649-7.521.388-.482.987-.729 1.605-.729H9.77a4.5 4.5 0 011.423.23l3.114 1.04a4.5 4.5 0 001.423.23zM21.669 13.773c.536-1.362.831-2.845.831-4.398 0-1.22-.182-2.398-.52-3.507-.26-.85-1.084-1.368-1.973-1.368H19.1c-.445 0-.72.498-.523.898.591 1.2.924 2.55.924 3.977a8.959 8.959 0 01-1.302 4.666c-.245.403.028.959.5.959h1.053c.832 0 1.612-.453 1.918-1.227z"
                    />
                  </svg>
                  <% } %>
                  <p class="text-base font-medium dislike-moule">
                    <%= idea.disLikeCount %>
                  </p>
                </div>
                <div
                  class="flex flex-row items-center justify-center gap-1 view"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-10 h-10 max-lg:w-7 max-lg:h-7 text-sky-600 hover:text-sky-900"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                  </svg>
                  <p class="text-base font-medium"><%= idea.viewCount %></p>
                </div>
              </div>

              <div class="comment-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-10 h-10 max-lg:w-7 max-lg:h-7 text-sky-600 hover:text-sky-900"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 12.76c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.076-4.076a1.526 1.526 0 011.037-.443 48.282 48.282 0 005.68-.494c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z"
                  />
                </svg>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <div class="flex justify-center my-10 pagination">
        <!-- pagination -->
        <% if( data.allIdea.totalPages > 0) { %>
        <nav aria-label="Page navigation example">
          <ul class="inline-flex items-center -space-x-px">
            <!-- FIRST ITEM -->
            <% if( data.allIdea.page == 1) { %>
            <li>
              <a
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
                href="<%= process.env.BASE_URL %>profile"
                >First</a
              >
            </li>
            <% } else { %>
            <li>
              <a
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
                href="<%= process.env.BASE_URL %>profile"
                >First</a
              >
            </li>
            <% } %> <% var i = (Number(data.allIdea.page) > 3 ?
            Number(data.allIdea.page) - 2 : 1) %> <% if(i !== 1) { %>
            <li>
              <a
                class="px-4 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
                href="#"
                >...</a
              >
            </li>
            <% } %> <% for(; i <= (Number(data.allIdea.page) + 2) && i <=
            data.allIdea.totalPages; i++) { %> <% if(i == data.allIdea.page) {
            %>
            <li>
              <a
                class="px-3 py-2 text-blue-600 border border-gray-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white"
                href="<%= process.env.BASE_URL %>profile/?page=<%= i %>"
              >
                <%= i %>
              </a>
            </li>
            <% } else { %>
            <li class="">
              <a
                class="px-4 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
                href="<%= process.env.BASE_URL %>profile/?page=<%= i %>"
              >
                <%= i %>
              </a>
            </li>
            <% } %> <% if (i == Number(data.allIdea.page) + 2 && i <
            data.allIdea.totalPages) { %>

            <li class="">
              <a
                class="px-4 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
                href="#"
                >...</a
              >
            </li>
            <% } %> <% } %>
            <!-- LAST ITEM -->
            <% if(data.allIdea.page == data.allIdea.totalPages) { %>
            <li
              class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
            >
              <a class="" href="#"> Last </a>
            </li>
            <% } else { %>
            <li
              class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
            >
              <a
                class=""
                href="<%= process.env.BASE_URL %>profile/?page=<%= data.allIdea.totalPages %>"
              >
                Last
              </a>
            </li>
            <% } %>
          </ul>
        </nav>
        <% } %>
      </div>
    </div>

    <!-- Modal delete -->
    <div
      id="popup-modal"
      tabindex="-1"
      class="fixed top-0 left-0 right-0 z-50 hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full"
    >
      <div class="relative w-full h-full max-w-md md:h-auto">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
          <button
            type="button"
            class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white"
            data-modal-hide="popup-modal"
          >
            <svg
              aria-hidden="true"
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"
              ></path>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
          <div class="p-6 text-center">
            <svg
              aria-hidden="true"
              class="mx-auto mb-4 text-gray-400 w-14 h-14 dark:text-gray-200"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            <h3
              class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400"
            >
              Are you sure you want to delete this idea?
            </h3>
            <button
